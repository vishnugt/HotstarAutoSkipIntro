{
    "name": "HotstarAutoSkipIntro",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Hotstar auto skip intro and enable subtitles by default",
    "permissions": [
        "https://www.hotstar.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.hotstar.com/*"
            ],
            "js": [
                "inject.js"
            ]
        }
    ]
}